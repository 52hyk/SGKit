<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/sgkit_fill_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/sgkit_8dp"
        android:paddingBottom="@dimen/sgkit_8dp"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:text="Options"
        android:textColor="#333333"
        android:textSize="16sp" />

    <com.sungrowpower.kit.fonticon.SGFontIcon
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&#xe98d;"
        android:id="@+id/sg_font"
        android:paddingRight="8dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="@color/sgkit_brand_routine"
        android:textSize="@dimen/sgkit_textSize_24" />
</RelativeLayout>