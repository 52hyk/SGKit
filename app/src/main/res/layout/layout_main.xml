<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sgkit_fill_white"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="下拉面板 Dropdown"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/UIBaseTitleStyle"
                android:text="基础用法" />

            <TextView
                android:id="@+id/tv_click"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="12dp"
                android:background="@drawable/btn_shape"
                android:gravity="center"
                android:text="Click to expand"
                android:textColor="@color/sgkit_text_white"
                android:textSize="16sp" />

            <TextView
                style="@style/UIBaseTitleStyle"
                android:text="多列样式" />

            <TextView
                android:id="@+id/tv_click2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="12dp"
                android:background="@drawable/btn_shape"
                android:gravity="center"
                android:text="Click to expand"
                android:textColor="@color/sgkit_text_white"
                android:textSize="16sp" />

            <TextView
                style="@style/UIBaseTitleStyle"
                android:text="自定义方向" />

            <TextView
                android:id="@+id/tv_click3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="12dp"
                android:background="@drawable/btn_shape"
                android:gravity="center"
                android:text="Click to expand"
                android:textColor="@color/sgkit_text_white"
                android:textSize="16sp" />

            <TextView
                style="@style/UIBaseTitleStyle"
                android:text="自定义下拉框节点" />

            <TextView
                android:id="@+id/tv_click4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="12dp"
                android:background="@drawable/btn_shape"
                android:gravity="center"
                android:text="Click to expand"
                android:textColor="@color/sgkit_text_white"
                android:textSize="16sp" />

            <TextView
                style="@style/UIBaseTitleStyle"
                android:text="使用 Options 子组件自定义下拉内容" />

            <TextView
                android:id="@+id/tv_click5"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="12dp"
                android:background="@drawable/btn_shape"
                android:gravity="center"
                android:text="Click to expand"
                android:textColor="@color/sgkit_text_white"
                android:textSize="16sp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>