<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Dropdown" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--UI图标题部分样式-->
    <style name="UIBaseTitleStyle" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/sgkit_text_light_gray</item>
        <item name="android:textSize">@dimen/px42</item>
        <item name="android:background">@color/title_bg_color</item>
        <item name="android:paddingStart">@dimen/px48</item>
        <item name="android:paddingEnd">@dimen/px48</item>
        <item name="android:paddingTop">@dimen/px48</item>
        <item name="android:paddingBottom">@dimen/px24</item>
    </style>
</resources>